{
  "name": "tasks-resolver-backend",
  "description": "Proyecto backend para la resolucion de tareas",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=production node dist/index.js",
    "build": "swc ./src index.ts -d dist -D",
    "postinstall": "npm run generate && npm run build",
    "dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec node -r @swc/register index.ts",
    "tsc": "tsc",
    "lint": "eslint . --ext .js,.ts --fix",
    "generate": "graphql-codegen --config codegen.yml",
    "lint-staged": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{handler,src}/**/*.{js,ts}": [
      "graphql-codegen --config codegen.yml",
      "eslint --ignore-path .gitignore --ext .js,.ts --fix",
      "bash -c tsc --noEmit true"
    ]
  },
  "dependencies": {
    "@ghondar/cli": "0.1.27",
    "@graphql-codegen/cli": "1.21.3",
    "@graphql-codegen/introspection": "1.18.1",
    "@graphql-codegen/typescript": "1.21.1",
    "@graphql-codegen/typescript-mongodb": "1.19.5",
    "@graphql-codegen/typescript-resolvers": "1.19.0",
    "@graphql-tools/load-files": "6.3.2",
    "@graphql-tools/merge": "7.0.0",
    "@graphql-tools/schema": "8.0.3",
    "@swc/core": "1.2.74",
    "@swc/register": "0.1.7",
    "apollo-datasource-rest": "3.1.1",
    "apollo-server": "3.1.2",
    "apollo-server-express": "3.1.2",
    "axios": "0.21.1",
    "bcrypt": "5.0.1",
    "body-parser": "1.19.0",
    "dotenv": "10.0.0",
    "express": "4.17.1",
    "graphql": "15.5.1",
    "graphql-tools": "8.1.0",
    "graphql-type-json": "0.3.2",
    "jsonwebtoken": "8.5.1",
    "module-alias": "2.2.2",
    "mongoose": "5.13.5",
    "morgan": "1.10.0",
    "signale": "1.4.0",
    "typescript": "4.3.5",
    "@types/bcrypt": "5.0.0",
    "@types/express": "4.17.13",
    "@types/module-alias": "2.0.1",
    "@types/mongoose": "5.11.97",
    "@types/morgan": "1.9.3",
    "@types/node": "16.4.13",
    "@types/signale": "1.4.2",
    "@typescript-eslint/eslint-plugin": "4.29.0",
    "@typescript-eslint/parser": "4.29.0",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-react": "7.24.0",
    "husky": "7.0.1",
    "lint-staged": "11.1.2",
    "nodemon": "2.0.12",
    "prettier": "2.3.2"
  },
  "_moduleAliases": {
    "actuators": "/src/datalayer/actuators",
    "models": "/src/datalayer/models",
    "controllers": "/src/datalayer/controllers",
    "config": "/src/config",
    "interfaces": "/src/service/interfaces",
    "utils": "/src/utils"
  }
}
