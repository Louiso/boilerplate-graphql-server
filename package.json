{
    "name": "tasks-resolver-backend",
    "description": "Proyecto backend para la resolucion de tareas",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "start": "NODE_ENV=production NEWRELIC_ENABLED_SERVICE=active node dist/index.js",
        "build": "swc ./src index.ts -d dist -D",
        "postinstall": "npm run generate && npm run build",
        "dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec node -r @swc/register index.ts",
        "tsc": "tsc",
        "lint": "eslint . --ext .js,.ts --fix",
        "generate": "graphql-codegen --config codegen.yml",
        "lint-staged": "lint-staged"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "{handler,src}/**/*.{js,ts}": [
            "graphql-codegen --config codegen.yml",
            "eslint --ignore-path .gitignore --ext .js,.ts --fix"
        ]
    },
    "dependencies": {
        "@ghondar/cli": "0.1.27",
        "@graphql-codegen/cli": "1.19.4",
        "@graphql-codegen/introspection": "1.18.1",
        "@graphql-codegen/typescript": "1.19.0",
        "@graphql-codegen/typescript-mongodb": "1.17.9",
        "@graphql-codegen/typescript-resolvers": "1.18.0",
        "@graphql-tools/load-files": "6.2.5",
        "@graphql-tools/merge": "6.2.6",
        "@graphql-tools/schema": "7.1.2",
        "@graphql-tools/utils": "7.10.0",
        "@swc/core": "1.2.40",
        "@swc/register": "0.1.7",
        "apollo-datasource-rest": "0.9.5",
        "apollo-server": "2.19.0",
        "apollo-server-express": "2.19.0",
        "aws-sdk": "2.966.0",
        "axios": "0.21.0",
        "bcrypt": "5.0.0",
        "body-parser": "1.19.0",
        "dotenv": "^10.0.0",
        "express": "4.17.1",
        "graphql": "15.5.1",
        "graphql-tools": "8.1.0",
        "graphql-type-json": "0.3.2",
        "ip2location-nodejs": "9.1.0",
        "jsonwebtoken": "8.5.1",
        "krowdy-geoip": "1.0.2",
        "module-alias": "2.2.2",
        "mongoose": "5.11.8",
        "morgan": "1.10.0",
        "newrelic": "8.5.2",
        "redis": "3.1.2",
        "signale": "1.4.0",
        "typescript": "4.1.3",
        "url-parse": "1.5.3"
    },
    "devDependencies": {
        "@types/bcrypt": "3.0.0",
        "@types/express": "4.17.9",
        "@types/module-alias": "2.0.0",
        "@types/mongoose": "5.10.3",
        "@types/morgan": "1.9.2",
        "@types/node": "14.14.14",
        "@types/redis": "2.8.32",
        "@types/signale": "1.4.1",
        "@types/url-parse": "1.4.4",
        "@typescript-eslint/eslint-plugin": "4.10.0",
        "@typescript-eslint/parser": "4.10.0",
        "eslint": "7.16.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-prettier": "7.1.0",
        "eslint-import-resolver-alias": "1.1.2",
        "eslint-plugin-import": "2.22.1",
        "eslint-plugin-prettier": "3.3.0",
        "eslint-plugin-react": "7.21.5",
        "husky": "4.3.6",
        "lint-staged": "10.5.3",
        "nodemon": "2.0.6",
        "prettier": "2.2.1"
    },
    "optionalDependencies": {
        "@swc/core-linux": "1.2.40"
    },
    "_moduleAliases": {
        "actuators": "/src/datalayer/actuators",
        "models": "/src/datalayer/models",
        "controllers": "/src/datalayer/controllers",
        "config": "/src/config",
        "interfaces": "/src/service/interfaces",
        "utils": "/src/utils"
    },
    "resolutions": {
        "graphql": "15.5.1"
    }
}
