{
	"name": "tasks-resolver-backend",
	"description": "Proyecto backend para la resolucion de tareas",
	"version": "1.0.0",
	"main": "index.js",
	"license": "MIT",
	"scripts": {
		"start": "NODE_ENV=production NEWRELIC_ENABLED_SERVICE=active node dist/index.js",
		"build": "swc ./src index.ts -d dist -D",
		"postinstall": "npm run generate && npm run build",
		"dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec node -r @swc/register index.ts",
		"tsc": "tsc",
		"lint": "eslint . --ext .js,.ts --fix",
		"generate": "graphql-codegen --config codegen.yml",
		"lint-staged": "lint-staged",
		"prepare": "husky install"
	},
	"husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
	"lint-staged": {
		"{handler,src}/**/*.{js,ts}": [
			"graphql-codegen --config codegen.yml",
			"eslint --ignore-path .gitignore --ext .js,.ts --fix"
		]
	},
	"dependencies": {
		"@graphql-codegen/cli": "2.6.1",
		"@graphql-codegen/introspection": "2.1.1",
		"@graphql-codegen/typescript": "2.4.3",
		"@graphql-codegen/typescript-mongodb": "2.3.1",
		"@graphql-codegen/typescript-resolvers": "2.5.0",
		"@graphql-tools/load-files": "6.5.3",
		"@graphql-tools/merge": "8.2.2",
		"@graphql-tools/schema": "8.3.1",
		"@graphql-tools/utils": "8.6.1",
		"@swc/cli": "0.1.55",
		"@swc/core": "1.2.139",
		"@swc/core-linux": "1.2.42",
		"@swc/core-linux-musl": "1.2.42",
		"@swc/register": "0.1.10",
		"apollo-datasource-rest": "3.5.1",
		"apollo-server": "3.6.3",
		"apollo-server-express": "3.6.3",
		"aws-sdk": "2.1073.0",
		"axios": "0.25.0",
		"bcrypt": "5.0.1",
		"body-parser": "1.19.1",
		"dotenv": "16.0.0",
		"express": "4.17.2",
		"graphql": "16.3.0",
		"graphql-tools": "8.2.0",
		"graphql-type-json": "0.3.2",
		"ip2location-nodejs": "9.1.0",
		"jsonwebtoken": "8.5.1",
		"module-alias": "2.2.2",
		"mongoose": "6.2.1",
		"morgan": "1.10.0",
		"newrelic": "8.7.1",
		"redis": "4.0.3",
		"signale": "1.4.0",
		"typescript": "4.5.5",
		"url-parse": "1.5.4"
	},
	"devDependencies": {
		"@types/bcrypt": "5.0.0",
		"@types/express": "4.17.13",
		"@types/module-alias": "2.0.1",
		"@types/mongoose": "5.11.97",
		"@types/morgan": "1.9.3",
		"@types/node": "17.0.17",
		"@types/redis": "4.0.11",
		"@types/signale": "1.4.4",
		"@types/url-parse": "1.4.8",
		"@typescript-eslint/eslint-plugin": "5.11.0",
		"@typescript-eslint/parser": "5.11.0",
		"eslint": "8.9.0",
		"eslint-config-airbnb-base": "15.0.0",
		"eslint-config-prettier": "8.3.0",
		"eslint-import-resolver-alias": "1.1.2",
		"eslint-plugin-import": "2.25.4",
		"eslint-plugin-prettier": "4.0.0",
		"eslint-plugin-react": "7.28.0",
		"husky": "^7.0.0",
		"nodemon": "2.0.15",
		"prettier": "2.5.1"
	},
	"_moduleAliases": {
		"actuators": "/src/datalayer/actuators",
		"models": "/src/datalayer/models",
		"controllers": "/src/datalayer/controllers",
		"config": "/src/config",
		"interfaces": "/src/service/interfaces",
		"utils": "/src/utils"
	},
	"resolutions": {
		"graphql": "16.3.0"
	}
}
